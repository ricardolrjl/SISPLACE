<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#367FA9"
    android:orientation="vertical"
    tools:context=".ActualizarFotoActivity">

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/cedula"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagenId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_base"
        android:layout_above="@+id/linearLayout2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/imgBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="tomarFoto"
        app:srcCompat="@drawable/camara" />

    <ImageButton
        android:id="@+id/imgBtnGuardar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="guardarFoto"
        app:srcCompat="@drawable/guardar" />
</LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnInicioAgenda"
        android:layout_width="89dp"
        android:layout_height="72dp"
        android:layout_gravity="clip_horizontal|clip_vertical|center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="irInicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/inicio" />

</LinearLayout>