<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#367FA9"
    android:orientation="vertical"
    tools:context=".AdminPersonalActivity">
    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/usuario"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imagenIdAdmin"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/usuarioblue"
        android:layout_gravity="center_horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecyclerAdmPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <ImageButton
        android:id="@+id/imgBtnInicio"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:onClick="irInicio"
        app:srcCompat="@drawable/inicio" />
</LinearLayout>